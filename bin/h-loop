#!/usr/bin/env ruby

require 'awesome_print'

module H
  module Experiment
    extend self

    def test(args=ARGV.clone, inp=$stdin, out=$stdout)
      cmd = args.join(' ')
      inp.readlines.map(&:chomp).each do |line|
        if cmd[/__/]
          puts `#{cmd.gsub(/__/, line)}`
        else
          puts `#{cmd} #{line}`
        end
      end
    end
  end
end

H::Experiment.test # => "this is where the test code goes"

